<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="First Number"
            android:id="@+id/textView"
            android:layout_alignParentLeft="true"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Second Number"
            android:id="@+id/textView2"
            android:layout_below="@+id/FirstNumber" android:layout_alignLeft="@+id/textView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/FirstNumber"
            android:layout_below="@+id/textView" android:layout_alignLeft="@+id/textView2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/SecondNumber" android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/Add" android:layout_below="@+id/SecondNumber" android:layout_alignLeft="@+id/SecondNumber"
            android:layout_marginTop="10dp" android:layout_alignRight="@+id/textView"
            android:onClick="Add"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multiply"
            android:id="@+id/Multiple" android:layout_below="@+id/Divide" android:layout_alignLeft="@+id/Divide"
            android:layout_alignRight="@+id/Divide"
            android:onClick="Multiple"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Divide"
            android:id="@+id/Divide" android:layout_below="@+id/Add" android:layout_alignLeft="@+id/Add"
            android:layout_alignRight="@+id/textView"
            android:onClick="Divide"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minus"
            android:id="@+id/Minus"
            android:layout_below="@+id/Multiple" android:layout_alignLeft="@+id/Multiple"
            android:layout_alignRight="@+id/Multiple"
            android:onClick="Minus"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Result"
            android:id="@+id/textView3"
            android:layout_alignTop="@+id/Add" android:layout_toRightOf="@+id/SecondNumber"
            android:layout_above="@+id/Divide"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Result" android:layout_alignParentRight="true"
            android:text="0"
            android:numeric="integer|signed|decimal" android:textColor="#2f63ff"
            android:textSize="@dimen/activity_horizontal_margin"
            android:layout_alignLeft="@+id/textView3" android:textIsSelectable="false"
            android:layout_below="@+id/textView3" android:layout_alignBottom="@+id/Minus"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st +/-"
            android:id="@+id/NegButton" android:layout_alignParentTop="true"
            android:onClick="NegButton" android:layout_alignRight="@+id/Result"
            android:layout_alignLeft="@+id/textView3" android:layout_above="@+id/NegButton2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2nd +/-"
            android:id="@+id/NegButton2" android:layout_below="@+id/FirstNumber"
            android:layout_alignRight="@+id/NegButton"
            android:onClick="NegButton2"
            android:layout_alignBottom="@+id/SecondNumber" android:layout_alignLeft="@+id/textView3"/>

</RelativeLayout>
